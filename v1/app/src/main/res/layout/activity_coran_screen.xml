<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/coran_fragment_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".coran.CoranScreen">

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_alignParentBottom="true"
        android:id="@+id/menu_nav_coran"
        android:paddingVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/chip_navigation_bcg"
        app:cnb_iconSize="30dp"
        app:cnb_menuResource="@menu/bottom_sourates"
        app:cnb_orientationMode="horizontal"
        app:cnb_radius="8dp"
        app:cnb_unselectedColor="@color/secondaryColor"
        app:cnb_badgeColor="@color/secondaryColor"/>
</RelativeLayout>