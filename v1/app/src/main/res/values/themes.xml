<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JaziraPro" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/secondaryColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="categoryTitleStyle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/amiri_regular</item>
    </style>

    <style name="defaultTextStyleTitle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/amiri_regular</item>
    </style>

    <!-- Customisation dees titres par defauts. -->
    <style name="defaultSubTitleStyle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/amiri_regular</item>
    </style>

    <!-- Customisation dees titres par defauts. -->
    <style name="defaultTitleStyle">
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:textSize">28sp</item>
        <item name="android:fontFamily">@font/amiri_bold</item>
    </style>
</resources>